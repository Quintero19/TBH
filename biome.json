{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/",
			"src/styles/fontawesome.css",
			"src/styles/normalize.css",
			"src/styles/tailwind.css",
			"src/styles/tailwind.css.map",
			"src/styles/fonts",
			"src/styles/css/bootstrap.css.map",
			"src/styles/css/bootstrap.min.css",
			"src/styles/css/bootstrap.css",
			"public/js/bootstrap.js",
			"public/js/jquery.1.11.1.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
